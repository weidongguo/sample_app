<% provide(:title, "Sign Up") %>
<h1>Sign Up</h1>

<div class = "row">
  <div class = "span6 offset3">
    <%= form_for(@user) do |f| %> <!--form_for() takes in an ActiveRecord object
                                 and construct a form using the object's attr -->
      <%= render 'shared/error_messages' %> 
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %> <!-- for text_field(), the arg has to match the
                                    attributes of the object -->
      <%= f.label :password %>
      <%= f.password_field :password %> 
      
      <%= f.label :confirmation %>
      <%= f.password_field :confirmation %>
      
      <%= f.submit "Create my account", class: "btn btn-large btn-primary" %> 

    <% end %>
  </div>
</div>
