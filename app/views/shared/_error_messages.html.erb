<% if @user.errors.any? %>
  <div id="error_explaination">
    <div class="alert alert-error">
      The form contains <%= pluralize(@user.errors.count, "error") %>.
    </div>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li>* <%= msg %> </li>
    <% end %>

    </ul>
  </div>
<% end %>

<!-- Rails wraps each field(from file where this is rendered)
with <div class="field_with_errors">...</div> if errors occur --> 
