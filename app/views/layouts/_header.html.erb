<header class="navbar navbar-fixed-top navbar-inverse">
  <!-- header tag indicates elements that should go atthe top fo the page,
  we've give the header tag 3 CSS classes -->
    <div class="navbar-inner"> <!-- div tag divides the document into parts -->
      <div class="container">
        <%= link_to("sample app", '#', id: "logo") %>
        <nav>
          <ul class="pull-right nav">    
            <li><%= link_to "Home", root_path %></li>
            <li><%= link_to "Help", help_path %></li>
            <% if signed_in? %>
              <li><%= link_to "Users", '#' %></li>
              <li id="fat-menu" class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  Account <b class="caret"></b>
                </a>
                <ul class="dropdown-menu" >
                  <li><%= link_to "Profile", user_path(current_user) %></li>
                  <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                  <li class="divider"></li>
                  <li>
                    <%= link_to "Sign out", signout_path, method: "delete" %>
                  </li>
                </ul>
              </li>
            <% else %>
              <li><%= link_to "Sign in", signin_path %></li> <!--link_to() generates
                                                    <a href='#'>Sign in</a> -->
            <% end %>
          </ul>
        </nav>   
      </div>
    </div>
</header>

